{
  "description": "Vojtech Loffler Downloader",
  "manifest_version": 2,
  "name": "VojtechLofflerDownloader",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },
 
  "browser_action": {
    "default_icon": {
      "16": "icons/page-16.png",
      "32": "icons/page-32.png"
    }
  },
  
  "permissions": [
    "tabs",
    "nativeMessaging",
    "webRequestBlocking",
    "webRequest",
    "notifications",
    "idle",
    "downloads",
    "downloads.open"
  ],
  
  "applications": {
    "gecko": {
      "id": "VojtechLofflerDownloader@example.org"
    }
  }
  
  
}
